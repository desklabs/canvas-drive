<div class="container">
  <div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2><%= title %></h2>
				</div>
				<div class="panel-body">
					<form role="form" action="/admin/login" method="post">
						<fieldset>
							<div class="row">
								<div class="center-block">
									<img class="profile-img" src="https://www.herokucdn.com/images/ninja-avatar-48x48.png" alt="">
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12 col-md-10  col-md-offset-1 ">
									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">
												<i class="glyphicon glyphicon-user"></i>
											</span> 
											<input class="form-control" placeholder="username@example.com" name="username" type="text" autofocus>
										</div>
									</div>
									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">
												<i class="glyphicon glyphicon-lock"></i>
											</span>
											<input class="form-control" placeholder="password" name="password" type="password" value="">
										</div>
									</div>
									<div class="form-group">
										<input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign in">
									</div>
								</div>
							</div>
						</fieldset>
					</form>
				</div>
				<div class="panel-footer">
					Use Heroku credentials to setup this application.
				</div>
      </div>
		</div>
	</div>
</div>